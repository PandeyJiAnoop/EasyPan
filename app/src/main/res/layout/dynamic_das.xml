<!-- item_service.xml -->
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="4dp"
    app:cardBackgroundColor="@color/bluee"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/axis_bank_ll"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="wrap_content">
        <ImageView android:id="@+id/imgService"
            android:layout_width="match_parent"
            android:layout_height="90dp"
             android:scaleType="fitXY" android:layout_gravity="center_horizontal"
            android:src="@drawable/b_axis"
            />
        <View
            android:layout_width="match_parent"
            android:background="#E3E3E3"
            android:layout_height="2dp">

        </View>
        <RelativeLayout
            android:background="@color/bluee"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_centerInParent="true"
                android:id="@+id/txtServiceName"
                android:textSize="12dp"
                android:textAlignment="center"
                android:padding="8dp" android:layout_width="@dimen/_100sdp"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:text="Axis Bank"
                android:textColor="@color/white"
                />

        </RelativeLayout>
    </LinearLayout>





</androidx.cardview.widget.CardView>