<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="3dp" app:cardCornerRadius="8dp"
    android:layout_margin="3dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="wrap_content">
        <LinearLayout
            android:padding="8dp"
            android:id="@+id/live_ll"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/date"
                android:layout_width="wrap_content"
                android:text=""
                android:background="@drawable/background_shape"
                android:gravity="center_vertical"

                android:padding="5dp"
                android:layout_gravity="right"


                android:textColor="@color/black"

                android:layout_height="match_parent">
            </TextView>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:padding="2dp"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView android:textSize="12sp"
                        android:textStyle="bold"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:text="Applicant \nName"
                        android:gravity="center_vertical"

                        android:textColor="@color/black"

                        android:layout_height="match_parent">
                    </TextView>
                    <TextView android:textSize="12sp"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:text="Mobile"
                        android:gravity="center_vertical"

                        android:textStyle="bold"


                        android:textColor="@color/black"

                        android:layout_height="match_parent">
                    </TextView>
                    <TextView android:textSize="12sp"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:text="Pan Type"
                        android:gravity="center_vertical"
                        android:textStyle="bold"



                        android:textColor="@color/black"

                        android:layout_height="match_parent">
                    </TextView>
                </LinearLayout>
                <LinearLayout
                    android:padding="2dp"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/tv1" android:textSize="12sp"
                        android:layout_width="0dp"
                        android:layout_weight="1"

                        android:text=""
                        android:gravity="center_vertical"
                        android:layout_height="match_parent">
                    </TextView>
                    <TextView android:textSize="12sp"
                        android:id="@+id/tv2"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:text=""
                        android:gravity="center_vertical"
                        android:layout_height="match_parent">
                    </TextView>
                    <TextView android:textSize="12sp"
                        android:id="@+id/tv3"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:text=""
                        android:gravity="center_vertical"
                        android:layout_height="match_parent">
                    </TextView>
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="5dp"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:padding="2dp"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="100dp"
                        android:text="Amount"
                        android:gravity="center_vertical"
                        android:textStyle="bold"



                        android:textColor="@color/black"

                        android:layout_height="match_parent">
                    </TextView>
                    <TextView
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:text="Ack"
                        android:gravity="center_vertical"

                        android:textStyle="bold"


                        android:textColor="@color/black"

                        android:layout_height="match_parent">
                    </TextView>
                    <TextView
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:text="Status"
                        android:gravity="center_vertical"

                        android:textStyle="bold"


                        android:textColor="@color/black"

                        android:layout_height="match_parent">
                    </TextView>

                </LinearLayout>
                <LinearLayout
                    android:padding="2dp"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView android:textSize="12sp"
                        android:id="@+id/tv4"
                        android:layout_width="100dp"
                        android:text="66666666"
                        android:gravity="center_vertical"
                        android:layout_height="match_parent">
                    </TextView>
                    <TextView android:textSize="12sp"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:text=""
                        android:gravity="center_vertical"
                        android:id="@+id/tv5"

                        android:layout_height="match_parent">
                    </TextView>
                    <TextView android:textSize="12sp"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:text=""
                        android:gravity="center_vertical"
                        android:id="@+id/tv6"
                        android:layout_height="match_parent">
                    </TextView>

                </LinearLayout>

            </LinearLayout>
            <RelativeLayout
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout

                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:padding="2dp"
                        android:orientation="horizontal"
                        android:layout_width="@dimen/_200sdp"
                        android:layout_height="wrap_content">
                        <TextView
                            android:layout_weight="1"
                            android:layout_width="0dp"
                            android:text="Comment"
                            android:gravity="center_vertical"

                            android:textStyle="bold"


                            android:textColor="@color/black"

                            android:layout_height="match_parent">
                        </TextView>

                    </LinearLayout>
                    <LinearLayout
                        android:padding="2dp"
                        android:orientation="horizontal"
                        android:layout_width="@dimen/_200sdp"
                        android:layout_height="wrap_content">
                        <TextView android:textSize="12sp"
                            android:layout_weight="1"
                            android:layout_width="0dp"
                            android:text=""
                            android:gravity="center_vertical"
                            android:id="@+id/tv7"
                            android:textStyle="bold"
                            android:layout_height="match_parent">
                        </TextView>

                    </LinearLayout>
                </LinearLayout>
                <Button android:id="@+id/print"
                    android:layout_alignParentRight="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/allot"
                    android:textSize="10dp" android:textAllCaps="true"
                    android:text="Upload" android:textStyle="bold"
                    android:orientation="horizontal">
                </Button>
            </RelativeLayout>

        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:background="@color/colorAqua"
            android:layout_height="4dp">

        </View>
    </LinearLayout>

</androidx.cardview.widget.CardView>
