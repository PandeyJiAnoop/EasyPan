<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    app:cardElevation="20dp"
    android:layout_margin="2dp"
    app:cardCornerRadius="20dp"
    android:layout_gravity="center"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_gravity="center"
        android:background="@color/white"
        android:padding="10dp"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Select NSDL Option"
            android:gravity="center"
            android:padding="5dp"
            android:layout_gravity="center"
            android:textColor="@color/black"
            android:textSize="22sp"/>


        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/one"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_margin="5dp"
            android:background="@drawable/side_nav_bar"
            android:text="New Pan Application"
            android:drawableLeft="@android:drawable/ic_dialog_email"
            android:gravity="center" android:paddingLeft="10dp"
            android:layout_gravity="center"
            android:textColor="@color/white"
            android:textSize="16sp" />
        <androidx.appcompat.widget.AppCompatButton
            android:layout_width="match_parent"
            android:layout_height="60dp"  android:id="@+id/two"
            android:layout_margin="5dp"
            android:background="@drawable/side_nav_bar"
            android:text="CSF PAN Application"
            android:drawableLeft="@android:drawable/ic_popup_disk_full"
            android:gravity="center" android:paddingLeft="10dp"
            android:layout_gravity="center"
            android:textColor="@color/white"
            android:textSize="16sp" />

        <androidx.appcompat.widget.AppCompatButton
            android:layout_width="match_parent"
            android:layout_height="60dp"  android:id="@+id/three"
            android:layout_margin="5dp" android:paddingLeft="10dp"
            android:background="@drawable/side_nav_bar"
            android:text="Track Pancard Application"
            android:drawableLeft="@android:drawable/ic_dialog_map"
            android:gravity="center"
            android:layout_gravity="center"
            android:textColor="@color/white"
            android:textSize="16sp" />


    </LinearLayout>

</androidx.cardview.widget.CardView>