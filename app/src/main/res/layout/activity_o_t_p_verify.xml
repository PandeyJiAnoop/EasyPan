<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:id="@+id/main_rl"
    android:layout_height="match_parent">
    <ScrollView
        android:layout_above="@+id/bottomll"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:scaleType="fitXY"
                    android:layout_width="match_parent"
                    android:layout_height="300dp"
                    android:layout_gravity="center"
                    android:src="@drawable/login_ban"/>

            </RelativeLayout>

            <RelativeLayout android:visibility="gone"
                android:id="@+id/relativeLayout"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_180sdp"
                android:background="@drawable/top_background2"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">
                <TextView
                    android:gravity="center_vertical"
                    android:layout_marginTop="22dp"
                    android:textAllCaps="true"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    android:text="Welcome To Easy Pan\nLogin"
                    android:textColor="#fff"
                    android:textSize="18dp"
                    android:textStyle="bold" />
                <ImageView android:tint="@color/white"
                    android:id="@+id/staic"
                    android:layout_width="match_parent"
                    android:layout_height="120dp"
                    android:layout_gravity="center"
                    android:layout_marginRight="25dp"
                    android:layout_marginLeft="25dp"
                    android:layout_marginTop="80dp"
                    android:src="@drawable/logo"/>

            </RelativeLayout>

            <LinearLayout
                android:layout_marginTop="30dp"
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_height="wrap_content">

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    app:cardCornerRadius="20dp"
                    android:id="@+id/cv"
                    app:cardElevation="20dp"
                    android:layout_margin="10dp"

                    app:cardBackgroundColor="#ECF5F5F5"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:orientation="vertical"
                        android:layout_height="wrap_content">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Enter your Code and Verify OTP"
                            android:textSize="18dp"
                            android:layout_marginTop="15dp"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:textColor="@color/black"/>
                        <TextView
                            android:id="@+id/tvMobileNo"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="18dp"
                            android:layout_marginTop="5dp"
                            android:layout_gravity="center"
                            android:textColor="@color/black"/>
                        <RelativeLayout
                            android:layout_gravity="center_horizontal"
                            android:layout_width="match_parent"
                            android:gravity="center_horizontal"
                            android:layout_height="70dp"
                            android:layout_marginBottom="5dp">
                            <EditText
                                android:id="@+id/etCode1"
                                android:layout_width="45dp"
                                android:layout_height="50dp"
                                android:textSize="16dp"
                                android:textColor="@color/black"
                                android:layout_centerVertical="true"
                                android:layout_marginRight="10dp"
                                android:layout_toLeftOf="@+id/etCode2"
                                android:maxLength="1"
                                android:gravity="center"
                                android:elevation="5dp"
                                android:inputType="number"
                                android:singleLine="true"
                                android:background="@drawable/rectangle"/>
                            <EditText
                                android:id="@+id/etCode2"
                                android:layout_width="45dp"
                                android:layout_height="50dp"
                                android:textSize="16dp"
                                android:textColor="@color/black"
                                android:layout_centerVertical="true"
                                android:layout_marginRight="10dp"
                                android:layout_toLeftOf="@+id/etCode3"
                                android:maxLength="1"
                                android:gravity="center"
                                android:elevation="5dp"
                                android:inputType="number"
                                android:singleLine="true"
                                android:background="@drawable/rectangle"/>
                            <EditText
                                android:id="@+id/etCode3"
                                android:layout_width="45dp"
                                android:layout_height="50dp"
                                android:textSize="16dp"
                                android:textColor="@color/black"
                                android:layout_centerVertical="true"
                                android:maxLength="1"
                                android:gravity="center"
                                android:elevation="5dp"
                                android:layout_marginRight="5dp"
                                android:layout_toLeftOf="@+id/view"
                                android:inputType="number"
                                android:singleLine="true"
                                android:background="@drawable/rectangle"/>
                            <View
                                android:id="@+id/view"
                                android:layout_width="1dp"
                                android:layout_height="0dp"
                                android:layout_centerHorizontal="true"/>
                            <EditText
                                android:id="@+id/etCode4"
                                android:layout_width="45dp"
                                android:layout_height="50dp"
                                android:textSize="16dp"
                                android:textColor="@color/black"
                                android:maxLength="1"
                                android:gravity="center"
                                android:layout_centerVertical="true"
                                android:elevation="5dp"
                                android:layout_toRightOf="@+id/view"
                                android:inputType="number"
                                android:layout_marginLeft="5dp"
                                android:singleLine="true"
                                android:background="@drawable/rectangle"/>
                            <EditText
                                android:id="@+id/etCode5"
                                android:layout_width="45dp"
                                android:layout_height="50dp"
                                android:textSize="16dp"
                                android:textColor="@color/black"
                                android:maxLength="1"
                                android:gravity="center"
                                android:layout_centerVertical="true"
                                android:elevation="5dp"
                                android:inputType="number"
                                android:layout_toRightOf="@+id/etCode4"
                                android:layout_marginLeft="10dp"
                                android:singleLine="true"
                                android:background="@drawable/rectangle"/>
                            <EditText
                                android:id="@+id/etCode6"
                                android:layout_width="45dp"
                                android:layout_height="50dp"
                                android:textSize="16dp"
                                android:textColor="@color/red"
                                android:maxLength="1"
                                android:gravity="center"
                                android:layout_centerVertical="true"
                                android:elevation="5dp"
                                android:inputType="number"
                                android:layout_toRightOf="@+id/etCode5"
                                android:layout_marginLeft="10dp"
                                android:singleLine="true"
                                android:background="@drawable/rectangle"/>
                        </RelativeLayout>
                        <TextView android:visibility="gone"
                            android:id="@+id/tvOtp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=""
                            android:textSize="16dp"
                            android:layout_marginTop="10dp"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:textColor="@color/black"/>
                        <TextView
                            android:id="@+id/tvResendOtp"
                            android:text="0:22 sec left"
                            android:textColor="@color/red"
                            android:layout_marginTop="10dp"
                            android:textSize="14dp"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginBottom="5dp"
                            android:textStyle="bold"
                            android:layout_below="@+id/crdsubmit"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                        <androidx.appcompat.widget.AppCompatButton
                            android:background="@drawable/rectangle_red"
                            android:id="@+id/btnSubmit"
                            android:layout_width="300dp"
                            android:layout_height="50dp"
                            android:text="Submit"
                            android:layout_marginTop="10dp"
                            android:layout_marginBottom="15dp"
                            android:textAllCaps="true"
                            android:layout_marginRight="16dp"
                            android:layout_marginLeft="16dp"
                            android:textSize="16dp" android:textStyle="bold"
                            android:layout_gravity="center"
                            android:textColor="@color/white"/>
                    </LinearLayout>

                </androidx.cardview.widget.CardView>

            </LinearLayout>

            <ImageView android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_gravity="center"
                android:layout_marginRight="25dp"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="20dp"
                android:src="@drawable/ban_b"/>

        </LinearLayout>
    </ScrollView>

    <LinearLayout android:visibility="gone"
        android:orientation="vertical"
        android:id="@+id/bottomll"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_height="wrap_content">
            <ImageView
                android:background="@drawable/buttn"
                android:id="@+id/fb"
                android:layout_width="60dp"
                android:src="@drawable/whatsapp"
                android:padding="10dp"
                android:layout_height="60dp"
                android:layout_gravity="center_horizontal"
                android:layout_margin="5dp"/>
            <ImageView
                android:background="@drawable/buttn"
                android:padding="5dp"
                android:id="@+id/telegram"
                android:layout_width="60dp"
                android:src="@drawable/web"
                android:tint="@color/white"
                android:layout_height="60dp"
                android:layout_gravity="center_horizontal"
                android:layout_margin="5dp"/>
        </LinearLayout>
        <RelativeLayout
            android:background="@drawable/side_nav_bar"
            android:layout_below="@+id/rel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="12dp"
                android:textAlignment="center"
                android:gravity="center_vertical"
                android:textColor="@color/white"
                android:text="Address: Opp clock tower near angel mobile Husainabad chowk, lucknow"
                android:textSize="16sp"
                android:textStyle="bold" />
        </RelativeLayout>


    </LinearLayout>

</RelativeLayout>

