<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/backnew"
    android:orientation="vertical">
    <!-- TODO: Update blank fragment layout -->
    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            tools:ignore="NewApi">
            <RelativeLayout
                android:id="@+id/header"
                android:layout_width="match_parent"
                android:layout_height="50dp">
                <ImageView
                    android:id="@+id/ivBack"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerInParent="true"
                    android:tint="@color/white"
                    android:src="@drawable/ic_arrow_back" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_centerHorizontal="true"
                    android:layout_marginLeft="17dp"
                    android:gravity="center_vertical"
                    android:text="NSDL Physical Application"
                    android:textColor="@color/white"
                    android:textSize="14dp"
                    android:textStyle="bold" />
            </RelativeLayout>
        </androidx.appcompat.widget.Toolbar>
    </com.google.android.material.appbar.AppBarLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="wrap_content">
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView      android:background="@drawable/rectangle"
                    android:padding="10dp"
                    android:layout_width="match_parent"
                    android:text="Application Charges:  107\nआवेदन शुल्क:  107"
                    android:layout_height="wrap_content">
                </TextView>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:background="@drawable/rectangle"
                    android:padding="10dp"
                    android:layout_width="match_parent"
                    android:text="You will Acknowledgment Number when our team upload your documents manually on NSDL portal.
\nजब हमारी टीम NSDL पोर्टल पर मैन्युअल रूप से आपके दस्तावेज़ अपलोड करेगी तो आपको पावती संख्या मिलेगी।"
                    android:layout_height="wrap_content">
                </TextView>
            </androidx.cardview.widget.CardView>



            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView android:background="@drawable/rectangle"
                    android:padding="10dp"
                    android:layout_width="match_parent"
                    android:text="Pan Number will be generated after 2-3 days after successfully applied by the team.
\nटीम द्वारा सफलतापूर्वक आवेदन करने के 2-3 दिन बाद पैन नंबर जनरेट होगा।"
                    android:layout_height="wrap_content">
                </TextView>
            </androidx.cardview.widget.CardView>


            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView android:background="@drawable/rectangle"
                    android:padding="10dp"
                    android:layout_width="match_parent"
                    android:text="There is no service, where you get the Pan number on WhatsApp.
\nऐसी कोई सेवा नहीं है, जहां आपको व्हाट्सएप पर पैन नंबर मिले।"
                    android:layout_height="wrap_content">
                </TextView>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView android:background="@drawable/rectangle"
                    android:padding="10dp"
                    android:layout_width="match_parent"
                    android:text="Need to Submit a physical pan form scan copy.
\nफिजिकल पैन फॉर्म स्कैन कॉपी जमा करने की आवश्यकता है।"
                    android:layout_height="wrap_content">
                </TextView>
            </androidx.cardview.widget.CardView>


            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView android:background="@drawable/rectangle"
                    android:padding="10dp"
                    android:layout_width="match_parent"
                    android:text="Document manually verified by the NSDL team.
\nदस्तावेज़ को NSDL टीम द्वारा मैन्युअल रूप से सत्यापित किया गया।"
                    android:layout_height="wrap_content">
                </TextView>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <Button
                    android:id="@+id/btn_submit"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_margin="20dp"
                    android:background="@color/ared"
                    android:text="Apply "
                    android:textColor="@color/white" />
            </androidx.cardview.widget.CardView>

        </LinearLayout>
    </ScrollView>

</LinearLayout>