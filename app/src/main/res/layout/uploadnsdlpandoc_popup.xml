<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    app:cardElevation="20dp"
    android:layout_margin="2dp"
    android:layout_gravity="center"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_gravity="center"
        android:background="@color/white"
        android:padding="10dp"
        android:layout_height="wrap_content">
        <androidx.coordinatorlayout.widget.CoordinatorLayout
            android:layout_width="wrap_content"
            android:id="@+id/uplod_rl"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="@dimen/_5sdp"
            android:layout_height="wrap_content">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/profile_image"
                android:layout_width="250dp"
                android:layout_height="250dp"
                app:civ_border_width="2dp"
                android:background="@drawable/uploadpdf"
                app:civ_border_color="@color/black"/>
            <ImageView
                android:id="@+id/iv_uploadimage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|right"
                android:background="@drawable/button_background_cusreg"
                android:padding="8dp"
                android:layout_marginBottom="35dp"
                android:backgroundTint="@color/ared"
                android:src="@drawable/ic_edit_white" />
        </androidx.coordinatorlayout.widget.CoordinatorLayout>
        <TextView
            android:id="@+id/path_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_gravity="center"
            android:textSize="10sp"/>


        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnDialog"
            android:layout_width="150dp"
            android:layout_height="40dp"
            android:layout_margin="14dp"
            android:background="@drawable/drawer"
            android:text="Submit"
            android:gravity="center"
            android:layout_gravity="center"
            android:textColor="@color/white"
            android:textSize="14sp" />
        <TextView
            android:id="@+id/pass_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="*Please take a screenshot if you have any issue during uploading"
            android:gravity="center"
            android:layout_gravity="center"
            android:textSize="12sp"/>

    </LinearLayout>

</androidx.cardview.widget.CardView>